<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projects.ufu.lace.myapplication">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <permission android:name="android.permission.BLUETOOTH" />
    <permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_arduino_bluetooth_comunicador"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TelaSelecionarModo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaBluetooth"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaTerminalMode"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".TelaGamePad"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/fullScrem" />
        <activity android:name=".TelaConfigracaoBotao" />
        <activity
            android:name=".TelaEditarBotao"
            android:screenOrientation="portrait"
            android:theme="@style/fullScrem" />
    </application>

</manifest>